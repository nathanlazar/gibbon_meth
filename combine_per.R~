# Combines results from all permutation analyses into one 
# data frame

combine_per <- function(bp.permute, gene.permute.list, 
  rep.permute.list, SINE.permute.list, cpg.permute.list) {

  df <- matrix(0, nrow=18 , ncol=8, 
               dimnames=list(c('all', 'gene', 'exon', 'intron',
                               'promoter', 'reps', 'LINE', 
                               'SINE', 'DNA', 'LTR', 'Satellite',
                               'Alu', 'MIR', 'AluJ', 'AluS', 
                               'AluY', 'cpg_isl', 'cpg_shore'),
                             c('meth.p', 'cov.p', 'cpg.p', 'per.p',
                               'meth.n', 'cov.n', 'cpg.n', 'per.n')))

  df[1,] <- c(unlist(bp.permute[c(4:6)]),NA,rep(1008,4))
  for(i in 1:length(gene.permute.list))
    df[i+1,] <- unlist(gene.permute.list[[i]][c(7,9,11,13,6,8,10,12)])
  df[6,] <- unlist(rep.permute[c(7,9,11,13,6,8,10,12)])
  for(i in 1:length(rep.permute.list))
    df[i+6,] <- unlist(rep.permute.list[[i]][c(7,9,11,13,6,8,10,12)])
  for(i in 1:length(SINE.permute.list))
    df[i+11,] <- unlist(SINE.permute.list[[i]][c(7,9,11,13,6,8,10,12)])
  for(i in 1:length(cpg.permute.list))
    df[i+16,] <- unlist(cpg.permute.list[[i]][c(7,9,11,13,6,8,10,12)])

  df
}